<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>

<div class="container">
    <br>
    <h2>Usuários</h2>
    <a href="/admin/users/create" class="btn btn-success">Criar novo usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=>{ %>
            <tr>
                <th><%= user.id%></th>
                <th><%= user.email%></th>
                <th>
                    <a href="/admin/users/edit/<%= user.id%>" class="btn btn-warning">Editar</a>                    
                    <form method="POST" action="/users/delete" style="display: inline;" onsubmit="deleteConfirm(event, this)">
                        <input type="hidden" name="id" value="<%=user.id%>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
    function deleteConfirm(event, form){
        event.preventDefault();
        var decision = confirm("Deseja realmente deletar essa categoria?");
        if(decision){
            form.submit();
        }
    }
</script>

